<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item android:id="@+id/circle_border" >
        <shape  android:shape="oval">
            <solid android:color="#ff0000" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="2px"
        android:top="2px"
        android:left="2px"
        android:right="2px">

        <shape android:shape="oval">

            <size
                android:width="20dp"
                android:height="20dp"
                />

            <solid android:color="#FFFFFF" />
            <corners android:radius="7dp" />


        </shape>

    </item>
</layer-list>